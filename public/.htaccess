# --------------------------------------------
# Rewrite Engine (React SPA)
# --------------------------------------------
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Redirect www → non-www
  RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
  RewriteRule ^(.*)$ https://%1%{REQUEST_URI} [L,R=301]

  # Serve existing files
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # SPA Fallback
  RewriteRule ^ index.html [L]
</IfModule>


# --------------------------------------------
# Brotli + Gzip Compression
# --------------------------------------------
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>


# --------------------------------------------
# Strong Caching (Optimal for Vite)
# --------------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On

  # HTML should never be cached (SPA shell)
  ExpiresByType text/html "access plus 0 seconds"

  # Static assets — safe to cache for 1 year due to Vite hash filenames
  ExpiresByType image/* "access plus 1 year"
  ExpiresByType font/* "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/json "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>


# --------------------------------------------
# Strong Immutable Cache-Control
# --------------------------------------------
<FilesMatch "\.(js|css|png|jpg|jpeg|gif|svg|webp|avif|woff|woff2|ttf|eot)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# HTML (no cache)
<FilesMatch "\.(html)$">
  Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
</FilesMatch>


# --------------------------------------------
# MIME Types (just to be safe)
# --------------------------------------------
AddType application/javascript .js
AddType font/woff2 .woff2
AddType font/woff .woff
AddType image/svg+xml .svg
